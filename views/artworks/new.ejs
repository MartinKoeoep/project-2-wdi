<h2>Add another post to artworks.</h2>

<form action="/artworks" method="post">
  <div class="">
    <label class="label">Art name</label>
    <div class="control">
      <input class="input" type="text" name="artName">
    </div>
  </div>
  <div class="">
    <label class="label">Cost</label>
    <div class="control">
      <input class="input" type="text" name="cost">
    </div>
  </div>
  <div class="">
    <label class="label">Artist</label>
    <div class="control">
      <input class="input" type="text" name="artist" value="<%= locals.user.username %>">
    </div>
  </div>
  <div class="">
    <label class="label">Client</label>
    <div class="control">
      <input class="input" type="text" name="client">
    </div>
  </div>
  <div class="">
    <label class="label">Source</label>
    <div class="control">
      <input class="input" type="text" name="source">
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-texts">Cancel</button>
    </div>
  </div>
</form>
