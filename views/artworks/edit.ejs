<h2>Edit <%= artwork.name%></h2>

<form action="/artworks/<%= artwork.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="">
    <label class="label">Art name</label>
    <div class="control">
      <input class="input" type="text" name="artName" value="<%= artwork.artName %>">
    </div>
  </div>
  <div class="">
    <label class="label">Cost</label>
    <div class="control">
      <input class="input" type="text" name="cost" value="<%= artwork.cost %>">
    </div>
  </div>
  <div class="">
    <label class="label">Artist</label>
    <div class="control">
      <input class="input" type="text" name="artist" value="<%= artwork.artist %>">
    </div>
  </div>
  <div class="">
    <label class="label">Client</label>
    <div class="control">
      <input class="input" type="text" name="client" value="<%= artwork.client %>">
    </div>
  </div>
  <div class="">
    <label class="label">Source</label>
    <div class="control">
      <input class="input" type="text" name="source" value="<%= artwork.source %>">
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-texts">Cancel</button>
    </div>
  </div>
</form>
